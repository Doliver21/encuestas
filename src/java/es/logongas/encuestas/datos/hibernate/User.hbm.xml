<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.logongas.encuestas.modelo.seguridad.User" >
        <id name="idUser" >
            <generator class="identity" />
        </id>
        <property name="login" />
        <property name="enabled" />
        <set name="roles"  cascade="all" inverse="true" lazy="false" table="UserRole" >
            <key column="idUser"  />
            <many-to-many column="idRole" class="es.logongas.encuestas.modelo.seguridad.Role" />
        </set>        
    </class>
</hibernate-mapping>