<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.logongas.encuestas.modelo.seguridad.Role" >
        <id name="idRole" >
            <generator class="identity" />
        </id>
        <property name="name" />
        <set name="privileges"  cascade="all" lazy="true" inverse="true"  >
            <key>
                <column name="idRole"  />
            </key>
            <one-to-many class="es.logongas.encuestas.modelo.seguridad.Privilege" />
        </set>     
        
        <set name="users" table="UserRole" lazy="true" cascade="all" inverse="false"  >
            <key>
                <column name="idRole"  />
            </key>
            <many-to-many column="IdUser" class="es.logongas.encuestas.modelo.seguridad.User" />
        </set>
    </class>
</hibernate-mapping>