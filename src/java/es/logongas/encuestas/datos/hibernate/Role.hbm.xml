<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="es.logongas.encuestas.modelo.seguridad.Role">
    <id name="idRole">
      <generator class="identity"/>
    </id>
    <property name="name"/>
    <set cascade="all" inverse="true" lazy="true" name="privileges">
      <key>
        <column name="idRole"/>
      </key>
      <one-to-many class="es.logongas.encuestas.modelo.seguridad.Permission"/>
    </set>
    <set cascade="all" inverse="true" name="users">
      <key>
        <column name="idRole"/>
      </key>
      <one-to-many class="es.logongas.encuestas.modelo.seguridad.UserRole"/>
    </set>
  </class>
</hibernate-mapping>
