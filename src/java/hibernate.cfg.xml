<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.datasource">java:/comp/env/jdbc/encuestas</property>
    <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="es/logongas/encuestas/datos/hibernate/Encuesta.hbm.xml"/>
    <mapping resource="es/logongas/encuestas/datos/hibernate/Pregunta.hbm.xml"/>
    <mapping resource="es/logongas/encuestas/datos/hibernate/Item.hbm.xml"/>
    <mapping resource="es/logongas/encuestas/datos/hibernate/User.hbm.xml"/>
    <mapping resource="es/logongas/encuestas/datos/hibernate/Role.hbm.xml"/>
    <mapping resource="es/logongas/encuestas/datos/hibernate/Privilege.hbm.xml"/>
    <mapping resource="es/logongas/encuestas/datos/hibernate/UserRole.hbm.xml"/>    
  </session-factory>
</hibernate-configuration>
